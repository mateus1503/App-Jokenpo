<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JogarActivity">

    <TextView
        android:id="@+id/textViewFrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha uma das opções:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tableLayoutEscolha"/>

    <TableLayout
        android:id="@+id/tableLayoutEscolha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="136dp"
                android:layout_weight="1"
                android:src="@drawable/pedra"
                android:id="@+id/imageViewPedra"
                android:onClick="clicked"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="136dp"
                android:layout_weight="1"
                android:src="@drawable/papel"
                android:id="@+id/imageViewPapel"
                android:onClick="clicked"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="136dp"
                android:layout_weight="1"
                android:src="@drawable/tesoura"
                android:id="@+id/imageViewTesoura"
                android:onClick="clicked"/>

        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/FrasePedra"
                android:text="@string/pedra"/>

            <TextView
                style="@style/FrasePapel"
                android:text="@string/papel"/>

            <TextView
                style="@style/FraseTesoura"
                android:text="@string/tesoura"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>